<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_margin="5dp"
        android:background="@drawable/chat_right_item">

        <TextView
            android:id="@+id/meesageshow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"

            android:text="hello"
            android:textColor="#fff" />

        <ImageView
            android:id="@+id/image"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_marginLeft="5dp"
            android:visibility="gone" />


        <ImageView
            android:id="@+id/unread"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_below="@+id/meesageshow"
            android:layout_toEndOf="@+id/meesageshow"
            android:src="@drawable/read_foreground" />

        <ImageView
            android:id="@+id/receive"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_below="@+id/meesageshow"
            android:layout_toEndOf="@+id/meesageshow"
            android:src="@drawable/unread"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/read"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_below="@+id/meesageshow"
            android:layout_toEndOf="@+id/meesageshow"
            android:src="@drawable/read"
            android:visibility="gone" />

    </RelativeLayout>
</RelativeLayout>